#:kivy 1.0
#:import kivy kivy

<Picellar>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            #source: 'data/images/background.jpg'
			source: 'vin.jpg'
            size: self.size
			
	txt: txt1
	deg: deg1
	hum: hum1
	humTargetW: humTarget
	tempTargetW: tempTarget
    
	
	# BoxLayout:
		# orientation: 'vertical'
		
		# Label:
			# id: deg1
			# text_size: self.width, None
			# size_hint: (1,.1)
