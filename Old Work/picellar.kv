#:kivy 1.0
#:import kivy kivy

<Picellar>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            #source: 'data/images/background.jpg'
			source: 'vin.jpg'
            size: self.size
			
	txt: txt1
	deg: deg1
	hum: hum1
	humTargetW: humTarget
	tempTargetW: tempTarget
	
	ui_time: ui_time1
	ui_ipadd: ui_ipadd1
	
    
	
	BoxLayout:
		orientation: 'vertical'
		
		
		
		BoxLayout:
			orientation: 'horizontal'
			size_hint: (1,.15)
			valign: 'top'
			
			
			
			Label:
				id: ui_time1
				text_size: self.width, None
				#size_hint: (1,.1)
				font_size: 20
				color: (1, 1, 1, .8)
				text: "Heure"
				valign: 'top'
				halign: 'left'
				markup: True
			
			Label:
				id: ui_title1
				text_size: self.width, None
				#size_hint: (1,.1)
				font_size: 25
				color: (1, 1, 1, .8)
				text: "LA CAVE DE CONDE"
				valign: 'top'
				halign: 'center'
				markup: True

			Label:
				id: ui_ipadd1
				text_size: self.width, None
				#size_hint: (1,.1)
				font_size: 20
				color: (1, 1, 1, .8)
				text: "Adresse IP"
				valign: 'top'
				halign: 'right'
				markup: True
	

		BoxLayout:
			orientation: 'horizontal'
		
			BoxLayout:
				id: bbox
				orientation: 'vertical'
				
				Label:
					id: txt1
					text_size: self.width, None
					font_size: 15
					color: (1, 1, 1, .8)
					text: "Initialisation ..."
					valign: 'middle'
					#halign: 'center'
					markup: True
			
			BoxLayout:
				orientation: 'vertical'		
				
				BoxLayout:
					orientation: 'vertical'	
				
					BoxLayout:
						orientation: 'horizontal'	
						Button:
							text: "-1"
							font_size: 30
							on_press: root.ChangeTargets(1)
						Label:
							id: tempTarget
							text_size: self.width, None
							font_size: 30
							color: (1, 1, 1, .8)
							text: "init"
							valign: 'middle'
							halign: 'center'
							#markup: True
						Button:
							text: "+1"
							font_size: 30
							on_press: root.ChangeTargets(2)

					Label:
						id: deg1
						text_size: self.width, None
						font_size: 90
						color: (1, 0, 0, .8)
						text: "deg"
						valign: 'middle'
						halign: 'center'
						markup: True

				
				BoxLayout:
					orientation: 'vertical'	

					Label:
						id: hum1
						text_size: self.width, None
						font_size: 90
						color: (1, 0, 0, .8)
						text: "hum"
						valign: 'middle'
						halign: 'center'
						markup: True
					
					BoxLayout:
						orientation: 'horizontal'	
						Button:
							text: "-1"
							font_size: 30
							on_press: root.ChangeTargets(3)
						Label:
							id:humTarget
							text_size: self.width, None
							font_size: 30
							color: (1, 1, 1, .8)
							text: "init"
							valign: 'middle'
							halign: 'center'
							#markup: True
						Button:
							text: "+1"
							font_size: 30
							on_press: root.ChangeTargets(4)
								
		

		BoxLayout:
			orientation: 'vertical'	
			size_hint: (1,.2)
		
			BoxLayout:
				id: separator
				size_hint_y: None
				height: 6
				#size_hint: (1,.05)
				#padding: (0,5,0,5)

			
			BoxLayout:
				orientation: 'horizontal'
				#size_hint: (1,.2)
				#padding: (0,0,0,0)
				
				Button:
					text: "Summary"
					font_size: 30
					#background_normal: ''
					background_color: (1, 0, 1, 1)
					
				Button:
					text: "Graphs"
					font_size: 30
					#background_normal: ''
					background_color: (0, 1, 0, 1)
					
				Button:
					text: "Page 3"
					font_size: 30
					#background_normal: ''
					background_color: (0, 1, 1, 1)